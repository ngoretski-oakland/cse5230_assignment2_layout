<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page3_bg"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="7"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/page3_soup"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_soup"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/page3_salad"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_salad"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/page3_maincourse"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_maincourse"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/page3_sidedishes"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_sidedishes"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/page3_dessert"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_dessert"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/page3_cake"
            android:adjustViewBounds="true"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/page3_cake"
            android:background="@android:color/transparent"/>


    </GridLayout>

</LinearLayout>